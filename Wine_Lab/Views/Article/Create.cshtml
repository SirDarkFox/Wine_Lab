<div layout:fragment="content">
    <div class="container" style="width: 100vh;">
        <div class="col-md-12 mt-4">
            <h1 class="about-text mb-3">Добавьте статью на сайт</h1>
            <form method="post" enctype="multipart/form-data" th:object="${article}">
                <div class="form-group">
                    <label for="title">Заголовок:</label>
                    <input required type="text" id="title" placeholder="Заголовок..." autocomplete="off" class="form-control"
                           th:field="*{title}" />
                    <span th:if="${#fields.hasErrors('title')}" th:errors="*{title}"></span>
                </div>
                <div class="form-group">
                    <label for="img-file">Баннер:</label>
                    <input required type="file" name="file" class="form-control-file" id="img-file">
                </div>
                <div class="form-group">
                    <label for="content">Содержание:</label>
                    <textarea required type="text" rows="4" id="content" placeholder="Content" class="form-control"
                              th:field="*{content}" autocomplete="off"></textarea>
                    <span th:if="${#fields.hasErrors('content')}" th:errors="*{content}"></span>
                </div>
                <button class="btn btn-primary mb-2" type="submit">Опубликовать</button>
            </form>
        </div>
    </div>
    <script>
        $('#content').summernote({
            height: 200
        });
    </script>
</div>
